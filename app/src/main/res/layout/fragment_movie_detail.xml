<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MovieDetailFragment">

    <ImageView
        android:id="@+id/fragment_movie_detail_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="@string/movie_image" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/fragment_movie_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="Movie Title"
                    />

                <TextView
                    android:id="@+id/fragment_movie_detail_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1996 | 1h 56m | User Rating: 7.6"
                    app:layout_constraintTop_toBottomOf="@id/fragment_movie_detail_title"

                    />

                <TextView
                    android:id="@+id/fragment_movie_detail_synopsis_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Synopsis"
                    android:textSize="20sp"
                    style="@style/Widget.MyMovieApp.CategoryTitleTextView"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/fragment_movie_detail_subtitle"
                    />

                <TextView
                    android:id="@+id/fragment_movie_detail_synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam vulputate fermentum neque eu fringilla. Quisque lacinia lectus felis, et ullamcorper mauris commodo eget. Cras aliquam sem ac diam blandit, sed pulvinar lacus convallis."
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/fragment_movie_detail_synopsis_title"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_movie_detail_genre_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/fragment_movie_detail_synopsis"
                    tools:listitem="@layout/movie_genre_list_item"
                    />

                <TextView
                    android:id="@+id/fragment_movie_detail_cast_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cast"
                    android:textSize="20sp"
                    style="@style/Widget.MyMovieApp.CategoryTitleTextView"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/fragment_movie_detail_genre_list"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_movie_detail_cast_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/fragment_movie_detail_cast_title"
                    tools:listitem="@layout/movie_cast_list_item"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>



</androidx.appcompat.widget.LinearLayoutCompat>